{
  "name": "lanchonete-backend",
  "version": "1.0.0",
  "description": "Sistema backend para lanchonete com autenticação JWT, gerenciamento de usuários, categorias e produtos",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "cross-env NODE_ENV=test jest --setupFilesAfterEnv=./tests/setup.js --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --setupFilesAfterEnv=./tests/setup.js --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:check": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:all": "prettier --write .",
    "quality-check": "npm run clean && npm run type-check && npm run format && npm run lint:check && npm run test"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "sequelize",
    "jwt",
    "postgresql",
    "api",
    "rest",
    "lanchonete"
  ],
  "author": "Equipe de Desenvolvimento",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
